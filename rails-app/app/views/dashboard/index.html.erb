<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1 class="h2">
        <i class="bi bi-speedometer2"></i> Dashboard
      </h1>
      <p class="text-muted">Overview of your Telegram message scheduling system</p>
    </div>
  </div>

  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5 class="card-title">Telegram Accounts</h5>
          <h2 class="mb-0"><%= @active_accounts_count %> / <%= @telegram_accounts_count %></h2>
          <small>Active / Total</small>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body">
          <h5 class="card-title">Active Schedules</h5>
          <h2 class="mb-0"><%= @active_schedules_count %> / <%= @schedules_count %></h2>
          <small>Running / Total</small>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-info text-white">
        <div class="card-body">
          <h5 class="card-title">Total Sends</h5>
          <h2 class="mb-0"><%= @total_sends %></h2>
          <small>All time</small>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="card bg-warning text-white">
        <div class="card-body">
          <h5 class="card-title">Success Rate</h5>
          <h2 class="mb-0">
            <%= @total_sends > 0 ? (@successful_sends.to_f / @total_sends * 100).round(1) : 0 %>%
          </h2>
          <small><%= @successful_sends %> successful, <%= @failed_sends %> failed</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-white">
          <h5 class="mb-0">Recent Activity</h5>
        </div>
        <div class="card-body p-0">
          <% if @recent_logs.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Time</th>
                    <th>Schedule</th>
                    <th>Account</th>
                    <th>Channel</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_logs.each do |log| %>
                    <tr>
                      <td class="text-muted">
                        <%= log.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                      </td>
                      <td>
                        <%= link_to log.schedule.name, schedule_path(log.schedule) %>
                      </td>
                      <td>
                        <%= log.telegram_account.display_name %>
                      </td>
                      <td>
                        <%= log.channel.display_name %>
                      </td>
                      <td>
                        <% case log.status %>
                        <% when 'sent' %>
                          <span class="badge bg-success">Sent</span>
                        <% when 'failed' %>
                          <span class="badge bg-danger">Failed</span>
                        <% when 'sending' %>
                          <span class="badge bg-info">Sending</span>
                        <% else %>
                          <span class="badge bg-secondary"><%= log.status.capitalize %></span>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to "View", send_log_path(log), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5 text-muted">
              <i class="bi bi-inbox" style="font-size: 3rem;"></i>
              <p class="mt-3">No activity yet. Create your first schedule to get started!</p>
              <%= link_to "Create Schedule", new_schedule_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-white">
          <h5 class="mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to new_telegram_account_path, class: "btn btn-outline-primary" do %>
              <i class="bi bi-plus-circle"></i> Add Telegram Account
            <% end %>
            <%= link_to new_message_template_path, class: "btn btn-outline-primary" do %>
              <i class="bi bi-file-text"></i> Create Message Template
            <% end %>
            <%= link_to new_schedule_path, class: "btn btn-outline-primary" do %>
              <i class="bi bi-calendar-check"></i> Create Schedule
            <% end %>
            <%= link_to channels_path, class: "btn btn-outline-primary", data: { turbo_method: :post } do %>
              <i class="bi bi-arrow-repeat"></i> Sync Channels from Telegram
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-white">
          <h5 class="mb-0">System Information</h5>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-4">Version:</dt>
            <dd class="col-sm-8">1.0.0</dd>

            <dt class="col-sm-4">Rails:</dt>
            <dd class="col-sm-8"><%= Rails.version %></dd>

            <dt class="col-sm-4">Environment:</dt>
            <dd class="col-sm-8"><%= Rails.env %></dd>

            <dt class="col-sm-4">Database:</dt>
            <dd class="col-sm-8">PostgreSQL</dd>

            <dt class="col-sm-4">Cache:</dt>
            <dd class="col-sm-8">Redis</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
