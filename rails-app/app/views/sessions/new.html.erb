<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <div class="card shadow">
      <div class="card-body">
        <h3 class="card-title text-center mb-4">
          <i class="bi bi-telegram"></i> Timelith
        </h3>
        <h5 class="text-center text-muted mb-4">Sign In</h5>

        <%= form_with url: login_path, method: :post, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "admin@example.com", required: true, autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= f.submit "Sign In", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <p class="text-center text-muted mt-3 small">
      Timelith - Telegram Message Scheduler
    </p>
  </div>
</div>
